@model IEnumerable<Livraria.Web.Models.Livros.LivroVm>
@{
    Layout = null;
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Resources.ResLabel.lblNome
            </th>
            <th>
                @Resources.ResLabel.lblAno
            </th>
            <th>
                @Resources.ResLabel.lblPaginas
            </th>
            <th>
                @Resources.ResLabel.lblValor
            </th>
            <th>
                @Resources.ResLabel.lblEstoque
            </th>
            <th>
                @Resources.ResLabel.lblGenero
            </th>
            <th>
                @Resources.ResLabel.lblAutor
            </th>
            <th>
                @Resources.ResLabel.lblEditora
            </th>
            <th class="text-right">
                @Resources.ResLabel.btnAcoes
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model)
            {
            <tr>
                <td class="">
                    @autor.Nome
                </td>
                <td class="">
                    @autor.Ano
                </td>
                <td class="">
                    @autor.Paginas
                </td>
                <td class="">
                    @autor.Valor
                </td>
                <td class="">
                    @autor.Estoque
                </td>
                <td class="">
                    @autor.GeneroDescricao
                </td>
                <td class="">
                    @autor.AutorNome
                </td>
                <td class="">
                    @autor.EditoraNome
                </td>
                <td class="text-right">
                    <button class="btnEditar btn btn-default btn-xs" data-id="@autor.Id"><span class="glyphicon glyphicon-edit"></span></button> &nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btnDeletar btn btn-danger btn-xs" data-id="@autor.Id"><span class="glyphicon glyphicon-remove "></span></button>
                </td>
            </tr>
        }
    </tbody>
</table>